<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="380dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_round_green"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="13dp"
            android:text="할일 추가"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="32sp" />


        <ImageView
            android:id="@+id/todoAdd_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/remove"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/todoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:text="할일 이름"
            android:textColor="#5E5E5E"/>

        <EditText
            android:id="@+id/todo_title"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_blank"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:text="시간"
            android:textAlignment="center"
            android:textColor="#5E5E5E"/>

        <TextView
            android:id="@+id/todo_time"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_blank"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/place"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:text="장소"
            android:textAlignment="center"
            android:textColor="#5E5E5E"/>

        <EditText
            android:id="@+id/todo_place"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_blank"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/todoAdd_ok"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginLeft="115dp"
            android:backgroundTint="#189B75"
            android:text="완료"
            android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>