<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="410dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_round_green"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="13dp"
            android:text="루틴 추가"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rtn_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/remove" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/todoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:text="루틴 이름"
            android:textColor="#5E5E5E" />

        <EditText
            android:id="@+id/rtn_title"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edittext_blank" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="요일"
            android:textColor="#5E5E5E" />

        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_blank">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/checkM"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="6dp"
                    android:button="@null"
                    android:background="@drawable/custom_date_checkbox"/>
                <CheckBox
                    android:id="@+id/checkTu"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="6dp"
                    android:button="@null"
                    android:background="@drawable/custom_date_checkbox"/>
                <CheckBox
                    android:id="@+id/checkW"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="6dp"
                    android:button="@null"
                    android:background="@drawable/custom_date_checkbox"/>
                <CheckBox
                    android:id="@+id/checkTh"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="6dp"
                    android:button="@null"
                    android:background="@drawable/custom_date_checkbox"/>
                <CheckBox
                    android:id="@+id/checkF"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="6dp"
                    android:button="@null"
                    android:background="@drawable/custom_date_checkbox"/>
                <CheckBox
                    android:id="@+id/checkSa"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="6dp"
                    android:button="@null"
                    android:background="@drawable/custom_date_checkbox"/>
                <CheckBox
                    android:id="@+id/checkSu"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="64dp"
                    android:button="@null"
                    android:background="@drawable/custom_date_checkbox"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="월"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="화"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="수"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="목"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="금"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:text="토"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="일"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="시간"
            android:textColor="#5E5E5E" />

        <TextView
            android:id="@+id/rtn_time"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edittext_blank" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="장소"
            android:textColor="#5E5E5E" />

        <EditText
            android:id="@+id/rtn_place"
            android:layout_width="210dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edittext_blank" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/rtn_add_ok"
            android:layout_width="160dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:backgroundTint="#189B75"
            android:text="완료"
            android:textColor="#ffffff"/>

    </LinearLayout>
</LinearLayout>